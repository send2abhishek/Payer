<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"

        android:id="@+id/activity_home_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#5C6961"
        android:orientation="vertical"
        android:id="@+id/activity_main_first_layout"
        android:layout_height="100dp">



    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="-70dp"
        app:cardElevation="8dp"
        android:background="#FFFFFF"
        android:layout_height="350dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_payment_mer_name"
                android:text="Sugar Cane Outlet "
                android:textColor="#2C2E2C"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_payment_mer_mob_nbr"
                android:layout_below="@id/activity_payment_mer_name"
                android:text="+91 9887766554"
                android:textColor="#A0AAA0"
                android:textSize="14sp"
                />




            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_merchant"
                />





            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/activity_payment_amount_entry"
                android:hint="â‚¹ Enter The Amount"
                android:layout_centerVertical="true"
                android:textColor="#A0AAA0"
                android:textColorHint="#A0AAA0"
                android:textSize="24sp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="3"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_wallet"
                    android:id="@+id/activity_payment_wallet"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_payment_wallet_text"
                    android:text="Pay using Attra Wallet"
                    android:layout_toRightOf="@id/activity_payment_wallet"
                    android:layout_alignBaseline="@id/activity_payment_wallet"
                    android:layout_marginTop="6dp"
                    android:textColor="#2C2E2C"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_payment_avl_bal"
                    android:layout_toRightOf="@id/activity_payment_wallet"
                    android:layout_below="@id/activity_payment_wallet_text"
                    android:layout_marginTop="4dp"
                    android:text="Available Balance : 1345 Pt."
                    android:textColor="#B7BDBA"
                    android:textSize="16sp"
                    />


            </RelativeLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <Button
            android:layout_width="196dp"
            android:layout_height="53dp"
            android:background="#EE3524"
            android:layout_centerInParent="true"
            android:text="Pay"
            android:textColor="#F9EFF3"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:id="@+id/activity_payment_pay_btn"
            />

    </RelativeLayout>
    


</LinearLayout>